{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Age</th>
                <th>IsVerified</th>
                <th>Pseudo</th>
                <th>PathImage</th>
                <th>Title</th>
                <th>Path_banner</th>
                <th>Description</th>
                <th>Nationality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.Name }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.pathImage }}</td>
                <td>{{ user.title }}</td>
                <td>{{ user.pathBanner }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.nationality }}</td>
                <td>
                    <a href="{{ path('app_account_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_account_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_account_new') }}">Create new</a>
{% endblock %}
