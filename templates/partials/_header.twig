<header>
    {% if app.user %}

        <nav class="d-none d-xl-flex container flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                <img class="pt-3 " src="{{ asset('images/logo/logo.png') }}" alt="logo" height="125" width=350>
            </a>

            <ul class="nav nav-pills align-items-center">
                <li class="nav-item ms-5">
                    <a class="nav-link {{ app.request.get('_route') == 'app_store' ? 'active text-white' : 'text-black' }}" href="{{ path('app_store') }}"><i class="fa-solid fa-store"></i> Store</a>
                </li>
                <li class="nav-item dropdown fixed-drop ms-5">
                    <a class="nav-link dropdown-toggle text-success" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-user"></i> Account
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="{{ path('app_account', {pseudo: app.user.pseudo}) }}">Informations</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_account', {pseudo: app.user.pseudo}) }}#ressources">Ressources</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_account', {pseudo: app.user.pseudo}) }}#purchase">Purchases</a></li>
                    </ul>
                </li>
                <li class="nav-item ms-5">
                    <a class="nav-link text-danger {{ app.request.get('_route') == 'app_logout' ? 'active' : '' }}" href="{{ path('app_logout') }}"><i class="fa-sharp fa-solid fa-arrow-right-from-bracket"></i> Logout</a>
                </li>
            </ul>
        </nav>

        {% else %}

            <nav class="d-none d-xl-flex container flex-wrap justify-content-center py-3 mb-4 border-bottom">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                    <img class="pt-3 " src="{{ asset('images/logo/logo.png') }}" alt="logo" height="125" width=350>
                </a>

                <ul class="nav nav-pills align-items-center">
                    <li class="nav-item ms-5">
                        <a class="nav-link {{ app.request.get('_route') == 'app_store' ? 'active text-white' : 'text-black' }}" href="{{ path('app_store') }}"><i class="fa-solid fa-store"></i> Store</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="{{ path('app_login') }}"><i class="fa-solid fa-user"></i> Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-success {{ app.request.get('_route') == 'app_register' ? 'active' : '' }}" href="{{ path('app_register') }}"><i class="fa-sharp fa-solid fa-arrow-right-from-bracket"></i> Register</a>
                    </li>
                </ul>
            </nav>

    {% endif %}
    <nav class="d-block d-xl-none navbar navbar-dark bg-dark fixed-top">
        {% if app.user %}
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">SlimyMarket</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link text-light" href="{{ path('app_store') }}"><i class="fa-solid fa-store"></i> Store</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user"></i> Account
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="{{ path('app_account', {pseudo: app.user.pseudo}) }}">Informations</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_account', {pseudo: app.user.pseudo}) }}#ressources">Ressources</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_account', {pseudo: app.user.pseudo}) }}#purchase">Purchases</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger {{ app.request.get('_route') == 'app_logout' ? 'active' : '' }}" href="{{ path('app_logout') }}"><i class="fa-sharp fa-solid fa-arrow-right-from-bracket"></i> Logout</a>
                            </li>
                        </ul>
                        <form class="d-flex mt-5" role="search" action="{{ path('app_store_search') }}" method="get">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">SlimyMarket</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link text-light" href="{{ path('app_store') }}"><i class="fa-solid fa-store"></i> Store</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-black" href="{{ path('app_login') }}"><i class="fa-solid fa-user"></i> Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-success {{ app.request.get('_route') == 'app_register' ? 'active' : '' }}" href="{{ path('app_register') }}"><i class="fa-sharp fa-solid fa-arrow-right-from-bracket"></i> Register</a>
                            </li>
                        </ul>
                        <form class="d-flex mt-5" role="search" action="{{ path('app_store_search') }}" method="get">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        {% endif %}
    </nav>

</header>
