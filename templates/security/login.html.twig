{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}

{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% for message in app.flashes('success') %}

            <div class="alert alert-success">{{ message }}</div>

        {% endfor %}

        <article class="container pt-5 back">
            <a class="text-decoration-none text-dark fs-3" href="{{ path('app_index') }}"><i class="fa-sharp fa-solid fa-arrow-left"></i> Back</a>
        </article>

        <div class="container spacer-login">
            <h1 class="text-center mb-5">Sign in</h1>
            <div class="col col-lg-12 d-flex">

                <div class="col col-lg-6">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" placeholder="Email" required autofocus>
                    <label for="inputPassword" class="mt-3">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" placeholder="PassWord" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="checkbox mb-3 mt-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                    <p class="small mt-3">Don't have an account yet? Please go <a href="{{ path('app_register') }}">sign
                            out</a></p>
                </div>
                <div class="col col-6 text-center">
                    <img src="{{ asset('images/characters/fire.png') }}" alt="login" height="500" width="auto">
                </div>

            </div>

        </div>

    </form>
{% endblock %}
