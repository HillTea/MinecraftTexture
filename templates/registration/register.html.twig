{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}

{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <article class="container pt-5 back">
        <a class="text-decoration-none text-dark fs-3" href="{{ path('app_index') }}"><i class="fa-sharp fa-solid fa-arrow-left"></i> Back</a>
    </article>
    <div class="container spacer-login">
        <h1 class="text-center mb-5">Sign out</h1>
        <div class="col col-lg-12 d-flex">

            <div class="col col-lg-6">
                {{ form_start(registrationForm) }}
                <div class="row mt-3">
                    <div class="col">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col">
                        {{ form_row(registrationForm.pseudo) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        {{ form_row(registrationForm.name) }}
                    </div>
                    <div class="col">
                        {{ form_row(registrationForm.lastname) }}
                    </div>
                </div>
                <div class="mt-3">
                    {{ form_row(registrationForm.age) }}
                </div>
                <div class="mt-3">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
                <div class="mt-3">
                {{ form_row(registrationForm.agreeTerms) }}
                </div>
                <button type="submit" class="btn btn-primary mt-3">Register</button>
                <p class="small mt-3">You already have an account ?! let's <a href="{{ path('app_login') }}">sign
                        in</a></p>
                {{ form_end(registrationForm) }}
            </div>
            <div class="d-none d-lg-block col col-6 text-center">
                <img src="{{ asset('images/characters/book.png') }}" alt="login" height="500" width="auto">
            </div>

        </div>

    </div>

{% endblock %}
